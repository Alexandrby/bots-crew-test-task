<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="0001-01-users" author="Alex.Siniov">

        <createTable tableName="lector">

            <column name="uuid" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="varchar(250)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="salary" type="double precision">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="department_id" type="varchar(250)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="degree_id" type="varchar(250)">
                <constraints unique="true" nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="lector"
                                 constraintName="fk_lector_department_department_id"
                                 referencedColumnNames="uuid"
                                 referencedTableName="department"/>

        <addForeignKeyConstraint baseColumnNames="degree_id"
                                 baseTableName="lector"
                                 constraintName="fk_lector_degree_degree_id"
                                 referencedColumnNames="uuid"
                                 referencedTableName="payment_method"/>

        <createTable tableName="department">

            <column name="uuid" type="varchar(250)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="varchar(250)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createTable tableName="degree">

            <column name="uuid" type="varchar(250)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="varchar(250)">
                <constraints nullable="false"/>
            </column>

        </createTable>


    </changeSet>
</databaseChangeLog>
